<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane minHeight="200.0" minWidth="350.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <JFXTextField fx:id="tfEmail">
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </StackPane.margin>
      </JFXTextField>
      <Text fill="#244f94" strokeType="OUTSIDE" strokeWidth="0.0" text="Unesite Vaš email:" StackPane.alignment="TOP_CENTER">
         <StackPane.margin>
            <Insets top="10.0" />
         </StackPane.margin>
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </Text>
      <JFXButton onAction="#posaljiAction" style="-fx-background-color: #244f94;" text="Pošalji" textFill="WHITE" StackPane.alignment="BOTTOM_CENTER">
         <StackPane.margin>
            <Insets bottom="10.0" />
         </StackPane.margin>
         <font>
            <Font name="Verdana" size="14.0" />
         </font>
      </JFXButton>
      <Text fx:id="tEmail" fill="#ff6060" strokeType="OUTSIDE" strokeWidth="0.0" text="Email koji ste unijeli nije registrovan" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets top="70.0" />
         </StackPane.margin>
         <font>
            <Font name="Verdana" size="10.0" />
         </font>
      </Text>
      <Text fx:id="tEmail1" fill="#45c936" strokeType="OUTSIDE" strokeWidth="0.0" text="Email je uspješno poslan!" StackPane.alignment="CENTER">
         <font>
            <Font name="Verdana" size="10.0" />
         </font>
         <StackPane.margin>
            <Insets top="70.0" />
         </StackPane.margin>
      </Text>
   </children>
</StackPane>
